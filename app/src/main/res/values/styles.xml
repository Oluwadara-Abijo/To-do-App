<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ContentTheme">
        <item name="android:textColor">@color/content_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_margin">@dimen/text_content_margin</item>
    </style>

    <style name="NewContentTheme">
        <item name="android:textColor">@color/content_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="ViewTheme">
        <item name="android:layout_width">@dimen/view_width</item>
        <item name="android:layout_height">@dimen/view_height</item>
        <item name="android:background">@color/view_color</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="IconsTheme">
        <item name="android:layout_margin">@dimen/text_content_margin</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="NewIconsTheme">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ItemListTheme">
        <item name="android:textColor">@color/content_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TitleItemList" parent="ItemListTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>

    </style>

</resources>
