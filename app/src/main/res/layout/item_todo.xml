<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="horizontal">

    <ImageView
        style="@style/IconsTheme"
        android:src="@drawable/ic_event_black_24dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_title"
            style="@style/TitleItemList"
            android:text="Title"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_start_date"
                style="@style/ItemListTheme"
                android:text="Start_Date" />

            <TextView
                android:id="@+id/text_view_start_time"
                style="@style/ItemListTheme"
                android:text="Start_Date" />

        </LinearLayout>



        <TextView
            android:id="@+id/text_view_end_date"
            style="@style/ItemListTheme"
            android:text="End_Date" />

        <TextView
            android:id="@+id/text_view_comment"
            style="@style/ItemListTheme"
            android:text="Comment" />


    </LinearLayout>

    <ImageView
        style="@style/IconsTheme"
        android:src="@drawable/ic_more_vert_black_24dp" />


</LinearLayout>
